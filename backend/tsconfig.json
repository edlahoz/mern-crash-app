{
  "compilerOptions": {
    "target": "es2018",
    "module": "nodenext",
    "lib": ["es2018"],
    "outDir": "dist",
    "rootDir": "server",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "server/types/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
